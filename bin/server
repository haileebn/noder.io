#!/usr/bin/env node

var noder     = require('../');
var commander = noder.commander;

commander  
  .option('-s, --static', 'Run a static server')
  .option('-r, --root <path>', 'The root path')
  .option('--debug', 'Debug mode')
  
  .parse(process.argv)
;

// server: static
if(commander.static){
  require('../lib/servers/static')(commander.root, commander.debug);
}